[alias]
	co = checkout
	ci = commit
	st = status

	a = add
	d = diff --ignore-all-space
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	ciano = commit --amend --no-edit
	pushfl = push --force-with-lease
	pushup = push --set-upstream origin HEAD
	start = !git init && git commit --allow-empty -m \"Initial commit\"

	author = blame -w -M # don't blame people for changing whitespace or moving code

	worked = !git l --all --author \"$(git config --get user.name)\"
	
	# delete branches
	show-branch-deleted-remote = "!sh -c 'LANG=en_US; git branch -vv | grep --color=always gone || true'"
	rm-branch-rm-on-remote     = "!sh -c 'git fetch -p && LANG=en_US; git branch -vv | grep gone | awk \"/: gone]/{print \\$1}\"| xargs --no-run-if-empty git branch -d'"

[push]
	default = simple
	followTags = true

[pull]
	rebase = preserve

[merge]
	tool = meld
	summary = true

[diff]
	tool = meld
	algorithm = patience

[log]
	follow = true

[rebase]
	autostash = true
	stat = true

[difftool]
	prompt = false

[mergetool]
	prompt = false

[submodule]
	recurse = true

[fetch]
	recurseSubmodules = true

[credential]
	helper = cache

[color]
	ui = true

[help]
	autocorrect = 30

[i18n]
	commitEncoding = UTF-8

[include]
	path = config.local

[remote]
	prune = true

[core]
	fscache = true
