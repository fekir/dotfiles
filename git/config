[alias]
	co = checkout
	ci = commit
	st = status

	a = add
	d = diff --ignore-all-space
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	pushfl = push --force-with-lease
	pushup = push --set-upstream origin HEAD
	start = !git init && git commit --allow-empty -m \"Initial commit\"

	author = blame -w -M # don't blame people for changing whitespace or moving code

[push]
	default = simple
	followTags = true

[pull]
	rebase = preserve

[merge]
	tool = meld
	summary = true

[diff]
	tool = meld
	algorithm = patience

[log]
	follow = true

[rebase]
	autostash = true
	stat = true

[difftool]
	prompt = false

[mergetool]
	prompt = false

[submodule]
	recurse = true

[fetch]
	recurseSubmodules = true

[credential]
	helper = cache

[color]
	ui = true

[help]
	autocorrect = 30

[i18n]
	commitEncoding = UTF-8

[include]
	path = config.local

[remote]
	prune = true

[core]
	fscache = true
